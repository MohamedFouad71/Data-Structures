{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build (Debug)",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/cmake-build-debug --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake: Build (Release)",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/cmake-build-release --config Release",
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}